<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--EditTextStyle-->
    <style name="CommonEditTextStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editText_height</item>
        <item name="android:layout_marginStart">@dimen/_35sdp</item>
        <item name="android:layout_marginEnd">@dimen/_35sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/subtitle2_text_size</item>

    </style>

